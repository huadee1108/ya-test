{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "lib": ["ES6", "DOM"],
  },
  "include": ["lib"],
  "exclude": ["node_modules", "tests"]
}
